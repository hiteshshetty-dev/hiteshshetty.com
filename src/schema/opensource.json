{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Open Source Contributions",
  "description": "Open source projects and contributions by Hitesh Shetty",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "properties": {
      "uuid": {
        "type": "string",
        "description": "Unique identifier for the open source project",
        "minLength": 1,
        "pattern": "^[a-z0-9-]+$"
      },
      "name": {
        "type": "string",
        "description": "Name of the open source project",
        "minLength": 1,
        "maxLength": 200
      },
      "description": {
        "type": "string",
        "description": "Description of the project and contributions",
        "minLength": 10,
        "maxLength": 500
      },
      "stars": {
        "type": "string",
        "description": "Number of stars or popularity indicator"
      },
      "url": {
        "type": "string",
        "format": "uri",
        "description": "URL to the project or contribution"
      },
      "contributions": {
        "type": "string",
        "description": "Type of contributions made",
        "minLength": 1,
        "maxLength": 200
      }
    },
    "required": [
      "uuid",
      "name",
      "description",
      "url",
      "contributions"
    ],
    "additionalProperties": false
  }
}
