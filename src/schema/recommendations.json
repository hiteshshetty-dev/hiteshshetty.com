{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LinkedIn Recommendations",
  "description": "LinkedIn recommendations received by Hitesh Shetty",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "properties": {
      "uuid": {
        "type": "string",
        "description": "Unique identifier for the recommendation",
        "minLength": 1,
        "pattern": "^[a-z0-9-]+$"
      },
      "recommenderName": {
        "type": "string",
        "description": "Name of the person who gave the recommendation",
        "minLength": 1,
        "maxLength": 100
      },
      "recommenderTitle": {
        "type": "string",
        "description": "Professional title of the recommender",
        "minLength": 1,
        "maxLength": 200
      },
      "recommenderCompany": {
        "type": "string",
        "description": "Company where the recommender works or worked",
        "minLength": 1,
        "maxLength": 200
      },
      "recommenderLinkedIn": {
        "type": "string",
        "format": "uri",
        "description": "LinkedIn profile URL of the recommender"
      },
      "relationship": {
        "type": "string",
        "description": "Professional relationship (e.g., 'worked together', 'reported to', 'managed')",
        "minLength": 1,
        "maxLength": 100
      },
      "recommendationText": {
        "type": "string",
        "description": "The recommendation text (supports multi-line text with newline characters)",
        "minLength": 50,
        "maxLength": 2000
      },
      "date": {
        "type": "string",
        "format": "date",
        "description": "Date when the recommendation was given in YYYY-MM-DD format"
      }
    },
    "required": [
      "uuid",
      "recommenderName",
      "recommenderTitle",
      "recommenderCompany",
      "relationship",
      "recommendationText",
      "date"
    ],
    "additionalProperties": false
  }
}

