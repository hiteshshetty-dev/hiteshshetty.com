{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Hitesh Shetty's Blogs",
  "description": "A comprehensive collection of blogs written by Hitesh Shetty",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "properties": {
      "slug": {
        "type": "string",
        "description": "URL-friendly slug for the blog post",
        "minLength": 1,
        "pattern": "^[a-z0-9-]+$"
      },
      "title": {
        "type": "string",
        "description": "The title of the blog post",
        "minLength": 1,
        "maxLength": 200
      },
      "description": {
        "type": "string",
        "description": "Brief description of the blog post",
        "minLength": 10
      },
      "date": {
        "type": "string",
        "format": "date",
        "description": "Publication date in YYYY-MM-DD format"
      },
      "readingTime": {
        "type": "string",
        "description": "Estimated reading time",
        "pattern": "^\\d+\\s+(min|mins?)\\s+read$"
      },
      "url": {
        "type": "string",
        "format": "uri",
        "description": "External URL to the blog post (e.g., Medium article, Dev.to article, etc.)"
      },
      "tags": {
        "type": "array",
        "description": "Array of tags categorizing the blog post",
        "items": {
          "type": "string",
          "minLength": 1
        },
        "minItems": 1,
        "maxItems": 10,
        "uniqueItems": true
      }
    },
    "required": [
      "slug",
      "title",
      "description",
      "date",
      "readingTime",
      "url",
      "tags"
    ],
    "additionalProperties": false
  }
}
