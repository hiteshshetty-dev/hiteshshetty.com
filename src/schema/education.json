{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Education History",
  "description": "Educational background of Hitesh Shetty",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "properties": {
      "uuid": {
        "type": "string",
        "description": "Unique identifier for the education entry",
        "minLength": 1,
        "pattern": "^[a-z0-9-]+$"
      },
      "institution": {
        "type": "string",
        "description": "Name of the educational institution",
        "minLength": 1,
        "maxLength": 200
      },
      "degree": {
        "type": "string",
        "description": "Degree obtained",
        "minLength": 1,
        "maxLength": 200
      },
      "field": {
        "type": "string",
        "description": "Field of study",
        "minLength": 1,
        "maxLength": 200
      },
      "location": {
        "type": "string",
        "description": "Location of the institution",
        "minLength": 1,
        "maxLength": 200
      },
      "period": {
        "type": "string",
        "description": "Duration of study",
        "minLength": 1,
        "maxLength": 50
      },
      "cgpa": {
        "type": "number",
        "description": "CGPA or GPA score"
      }
    },
    "required": [
      "uuid",
      "institution",
      "degree",
      "field",
      "location",
      "period"
    ],
    "additionalProperties": false
  }
}
